Screen {
    layout: vertical;
}

.pane {
    height: 1fr;
    border: solid green;
}

.top-pane {
    border: thick green;
    height: 7;
}

.bottom-pane {
    .left, .right {
        width: 1fr;
    }
}

#title {
    text-align: center;
    margin-bottom: 1;
}

Input {
    margin-bottom: 1;
}

#ok_button {
    margin-top: 1;
    width: 100%;
}

SettingsModal, ForgetModal {
    align: center middle;
}

#settings-modal-container, #forget-modal-container {
    width: 60;
    height: 30;
    border: thick $primary;
    background: $surface;
    padding: 1 2;
}

#settings-modal-title {
    text-align: center;
    text-style: bold;
    margin-bottom: 1;
}

#save-button, #cancel-button, #forget-button, #prune-button {
    margin: 1 1;
    min-width: 16;
}

.current-snapshot {
    background: $accent;
    color: $text-muted;
}
